<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="outer" stylesheets="@application.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="application.Controller">
	<VBox styleClass="loginBox">
		<HBox styleClass="field">
			<VBox>
				<Label prefHeight="20.0" prefWidth="61.0" styleClass="userDataField" text="E-Mail:" />
				<TextField fx:id="mail" styleClass="logins" />
				<Label fx:id="warning" styleClass="warning" text="Not a valid E-Mail!" />
			</VBox>
		</HBox>
		<HBox styleClass="field">
			<VBox>
				<Label styleClass="userDataField" text="Password:" />
				<PasswordField fx:id="pw" styleClass="logins" />
			</VBox>
		</HBox>
		<VBox styleClass="buttons">
			<CheckBox fx:id="remember" styleClass="remember" text="Remember me" />
			<HBox styleClass="logRem">
				<Button fx:id="login" onAction="#login" styleClass="b" text="Login" />
				<Button fx:id="reg" onAction="#register" styleClass="b" text="Register" />
			</HBox>
		</VBox>
		<Label fx:id="wrongLogin" styleClass="warning" />
		<VBox styleClass="serverField">
			<TextField fx:id="serverAdress" text="https://api.voc5.org/" />
		</VBox>
	</VBox>
</VBox>
