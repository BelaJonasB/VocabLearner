<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="400.0" prefWidth="600.0" styleClass="mainGoals" stylesheets="@application.css" type="AnchorPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <Label fx:id="title" layoutX="14.0" layoutY="7.0" prefHeight="28.0" prefWidth="333.0" text="Select Vocabulary to Learn">
      <font>
         <Font name="System Bold" size="16.0" />
      </font></Label>
   <TableView fx:id="vocabTableView" layoutX="14.0" layoutY="75.0" prefHeight="257.0" prefWidth="561.0">
   </TableView>
   <Button fx:id="startLearningButton" layoutX="14.0" layoutY="353.0" mnemonicParsing="false" onAction="#startLearningPressed" prefHeight="25.0" prefWidth="265.0" text="Start Learning" />
   <Button fx:id="startLearningRandom" layoutX="302.0" layoutY="353.0" mnemonicParsing="false" onAction="#startLearningRandomPressed" prefHeight="25.0" prefWidth="273.0" text="Start Learning in Random Order" />
   <Button fx:id="selectAllButton" layoutX="484.0" layoutY="42.0" mnemonicParsing="false" onAction="#selectAllButtonClicked" prefHeight="26.0" prefWidth="91.0" text="Select All" />
   <ComboBox fx:id="languageFilterComboBox" layoutX="14.0" layoutY="42.0" onAction="#languageSelected" prefHeight="25.0" prefWidth="173.0" promptText="Filter Language" />
</fx:root>
