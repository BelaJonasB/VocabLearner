<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<fx:root xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" prefHeight="400.0" prefWidth="600.0" styleClass="mainLearn" stylesheets="@application.css" type="AnchorPane">
    <AnchorPane styleClass="allesRein" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="70.0">
    <HBox fx:id="learningButtons" layoutY="400.0" spacing="15">
        <Button fx:id="solveButton" mnemonicParsing="false" disable="true" onAction="#solveVocable" prefHeight="25.0" prefWidth="220.0" text="Solve" styleClass="classicButton"/>
        <Button fx:id="nextButton" mnemonicParsing="false" onAction="#nextVocable" prefHeight="25.0" prefWidth="220.0" text="Next" styleClass="classicButton"/>
    </HBox>
    <VBox>
        <HBox fx:id="mainLearning" spacing="110">
            <VBox spacing="15">
                <Label fx:id="Vocable" styleClass="learning" text="Vocable" />
                <Label fx:id="selectedVocable" styleClass="learningC" prefHeight="40"/>
                <Label fx:id="Errors" styleClass="learning" text="Mistakes" />
                <Label fx:id="userErrors" styleClass="learningC"/>
            </VBox>
            <VBox spacing="15" prefWidth="150">
                <Label fx:id="Translation" styleClass="learning" text="Translation?" />
                <HBox styleClass="answer">
                    <TextField fx:id="userTranslation" styleClass="loginsTrans"/>
                </HBox>
                <Label fx:id="Scored" styleClass="learning" text="+Score" />
                <Label fx:id="userScored" styleClass="learningC"/>
                <HBox fx:id="errorCorrectionBox">
                    <Label fx:id="ErrorCorrection" prefWidth="60" text="Mistakes:" styleClass="learning"/>
                    <Label prefWidth="80" fx:id="errorCorrection" styleClass="learningC"/>
                    <Button fx:id="submitErrorsButton" mnemonicParsing="false" disable="true" onAction="#submitErrors" prefHeight="25.0" prefWidth="80" text="Submit"/>
                </HBox>
            </VBox>
            <VBox spacing="26">
                <Label fx:id="Answer" styleClass="learning" text="Answer" />
                <Label fx:id="selectedVocableTranslation" styleClass="learningC"/>
                <Label fx:id="Phase" styleClass="learning" text="New phase" />
                <Label fx:id="phase" minWidth="20.0" styleClass="learningC"/>
            </VBox>
            <VBox spacing="26">
                <Label fx:id="Score" styleClass="learning" text="Score" />
                <Label fx:id="userScore" styleClass="learningC"/>
            </VBox>
        </HBox>
        <Button fx:id="manualCorrectionButton" mnemonicParsing="false" onAction="#manualCorrection" prefHeight="25.0" prefWidth="220.0" text="manual correction" styleClass="classicButton"/>
        <VBox spacing="10" style="-fx-padding: 10 10 10 10">
            <Button fx:id="manualCorrectButton" mnemonicParsing="false" onAction="#correctAnswer" prefHeight="25.0" prefWidth="250.0" text="Given answer is correct" styleClass="classicButton"/>
            <Button fx:id="manualPartlyCorrectButton" mnemonicParsing="false" onAction="#partlyCorrectAnswer" prefHeight="25.0" prefWidth="250.0" text="Given answer is partly correct" styleClass="classicButton"/>
            <Button fx:id="manualWrongButton" mnemonicParsing="false" onAction="#wrongAnswer" prefHeight="25.0" prefWidth="250.0" text="Given answer is wrong" styleClass="classicButton"/>
        </VBox>
    </VBox>
        <HBox fx:id="results" spacing="50">
        <VBox spacing="15">
            <Label fx:id="TestedVocables" styleClass="learning" text="Vocable tested:" />
            <Label fx:id="testedVocables" styleClass="learningC"/>
            <Label fx:id="CorrectVocables" styleClass="learning" text="completely correct:" />
            <Label fx:id="correctVocables" styleClass="learningC"/>
        </VBox>
        <VBox spacing="15">
            <Label fx:id="AverageScored" text="Average Points Scored:" styleClass="learning"/>
            <Label fx:id="averageScored" styleClass="learningC"/>
            <Label fx:id="WrongVocables" styleClass="learning" text="completely wrong:" />
            <Label fx:id="wrongVocables" styleClass="learningC"/>
        </VBox>
        <VBox spacing="15">
            <Label fx:id="ScoreFinal"  text="Score:" styleClass="learning"/>
            <Label fx:id="scoreFinal" styleClass="learningC"/>
            <Label fx:id="PartCorrectVocables" styleClass="learning" text="partly correct" />
            <Label fx:id="partCorrectVocables" styleClass="learningC"/>
        </VBox>
    </HBox>

    <HBox fx:id="resultButtons" layoutY="353.0" spacing="15">
        <Button fx:id="showAllVocablesButton" mnemonicParsing="false" onAction="#showAllVocables" prefHeight="25.0" prefWidth="258.0" text="Show All Vocables" styleClass="classicButton"/>
        <Button fx:id="restartLearningButton" mnemonicParsing="false" onAction="#restartLearning" prefHeight="25.0" prefWidth="258.0" text="Start learning again" styleClass="classicButton"/>
    </HBox>

    <TableView fx:id="allVocables" prefHeight="410.0" prefWidth="700.0">
    </TableView>

    <HBox fx:id="resultButtons2" layoutY="433.0" spacing="15">
        <Button fx:id="hideAllVocablesButton" mnemonicParsing="false" onAction="#hideAllVocables" prefHeight="25.0" prefWidth="258.0" text="Hide All Vocables" styleClass="classicButton"/>
    </HBox>

    <HBox fx:id="errorNoVocables">
        <Label fx:id="ErrorNoVocables"   alignment="CENTER" styleClass="logins" text="No Vocables Selected" />
    </HBox>

    <HBox fx:id="errorButtons" layoutY="353.0" spacing="15">
        <Button fx:id="changeToVocabulary" mnemonicParsing="false" onAction="#gotoVocabList" prefHeight="25.0" prefWidth="258.0" text="Go to Vocabulary" styleClass="classicButton"/>
        <Button fx:id="changeToGoals" mnemonicParsing="false" onAction="#gotoGoals" prefHeight="25.0" prefWidth="258.0" text="Go to Goals" styleClass="classicButton"/>
    </HBox>
    </AnchorPane>
</fx:root>