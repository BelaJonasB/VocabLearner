<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<fx:root xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" prefHeight="400.0" prefWidth="600.0" styleClass="mainLearn" stylesheets="@application.css" type="AnchorPane">

    <HBox fx:id="learningButtons" layoutY="353.0" spacing="15">
        <Button fx:id="solveButton" mnemonicParsing="false" disable="true" onAction="#solveVocable" prefHeight="25.0" prefWidth="258.0" text="Solve" styleClass="classicButton"/>
        <Button fx:id="nextButton" mnemonicParsing="false" onAction="#nextVocable" prefHeight="25.0" prefWidth="258.0" text="Next" styleClass="classicButton"/>
    </HBox>

    <HBox fx:id="mainLearning" spacing="15">
        <VBox spacing="10">
            <Label fx:id="Vocable" styleClass="learning" text="Vocable" />
            <TextField disable="true" fx:id="selectedVocable" styleClass="logins"/>
            <Label fx:id="Errors" styleClass="learning" text="Errors" />
            <TextField disable="true" fx:id="userErrors" styleClass="logins"/>
        </VBox>
        <VBox spacing="10">
            <Label fx:id="Translation" styleClass="learning" text="Translation?" />
            <TextField editable="true" fx:id="userTranslation" styleClass="logins"/>
            <Label fx:id="Scored" styleClass="learning" text="+Score" />
            <TextField disable="true" fx:id="userScored" styleClass="logins"/>
        </VBox>
        <VBox spacing="10">
            <Label fx:id="Answer" styleClass="learning" text="Answer" />
            <TextField disable="true" fx:id="selectedVocableTranslation" styleClass="logins"/>
        </VBox>
        <VBox spacing="10">
            <Label fx:id="Score" styleClass="learning" text="Score" />
            <Label fx:id="userScore" styleClass="learning"/>
        </VBox>
    </HBox>

    <HBox fx:id="results" spacing="15" disable="true">
        <VBox spacing="10">
            <Label fx:id="TestedVocables" styleClass="learning" text="Vocable tested:" />
            <TextField editable="false" fx:id="testedVocables" styleClass="logins"/>
            <Label fx:id="CorrectVocables" styleClass="learning" text="completely correct:" />
            <TextField editable="false" fx:id="correctVocables" styleClass="logins"/>
        </VBox>
        <VBox spacing="10">
            <Label fx:id="AverageScored" text="Average Points Scored:" styleClass="learning"/>
            <TextField editable="false" fx:id="averageScored" styleClass="logins"/>
            <Label fx:id="WrongVocables" styleClass="learning" text="completely wrong:" />
            <TextField editable="false" fx:id="wrongVocables" styleClass="logins"/>
        </VBox>
        <VBox spacing="10">
            <Label fx:id="ScoreFinal"  text="Score:" styleClass="learning"/>
            <TextField editable="false" fx:id="scoreFinal" styleClass="logins"/>
            <Label fx:id="PartCorrectVocables" styleClass="logins" text="partly correct" />
            <TextField editable="false" fx:id="partCorrectVocables" styleClass="logins"/>
        </VBox>
    </HBox>

    <HBox fx:id="resultButtons" layoutY="353.0" spacing="15">
        <Button fx:id="showAllVocablesButton" mnemonicParsing="false" onAction="#showAllVocables" prefHeight="25.0" prefWidth="258.0" text="Show All Vocables" styleClass="classicButton"/>
        <Button fx:id="restartLearningButton" mnemonicParsing="false" onAction="#restartLearning" prefHeight="25.0" prefWidth="258.0" text="Start learning again" styleClass="classicButton"/>
    </HBox>

    <TableView fx:id="allVocables" layoutX="50.0" layoutY="75.0" prefHeight="200.0" prefWidth="630.0">
    </TableView>

    <HBox fx:id="resultButtons2" layoutY="353.0" spacing="15">
        <Button fx:id="hideAllVocablesButton" mnemonicParsing="false" onAction="#hideAllVocables" prefHeight="25.0" prefWidth="258.0" text="Hide All Vocables" styleClass="classicButton"/>
    </HBox>

    <HBox fx:id="errorNoVocables">
        <Label fx:id="ErrorNoVocables"   alignment="CENTER" styleClass="logins" text="No Vocables Selected" />
    </HBox>

    <HBox fx:id="errorButtons" layoutY="353.0" spacing="15">
        <Button fx:id="changeToVocabulary" mnemonicParsing="false" onAction="#gotoVocabList" prefHeight="25.0" prefWidth="258.0" text="Go to Vocabulary" styleClass="classicButton"/>
        <Button fx:id="changeToGoals" mnemonicParsing="false" onAction="#gotoGoals" prefHeight="25.0" prefWidth="258.0" text="Go to Goals" styleClass="classicButton"/>
    </HBox>

</fx:root>